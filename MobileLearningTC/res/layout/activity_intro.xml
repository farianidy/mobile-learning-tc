<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".IntroActivity" xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <android.support.v4.view.ViewPager
        android:id="@+id/vpIntro"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    
    <LinearLayout
        android:id="@+id/llIntroMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/llIntroMenu"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:paddingBottom="20dp"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin" >
        
        <Button
            android:id="@+id/bRegister"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:text="@string/button_register" />
	
	    <Button
	        android:id="@+id/bLogin"
	        android:layout_width="120dp"
	        android:layout_height="wrap_content"
	        android:text="@string/button_login" />
	    
    </LinearLayout>
    
    <com.viewpagerindicator.CirclePageIndicator
        android:id="@+id/indicator"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/llIntroMenu"
        android:layout_marginBottom="20dp"
        android:padding="10dp"
        app:fillColor="#7B7B7B"
        app:pageColor="#C6C6C6"
        app:radius="5dp"
        app:strokeColor="#C6C6C6" />

</RelativeLayout>